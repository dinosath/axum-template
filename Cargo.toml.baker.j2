[package]
name = "{{project_name}}"
version = "{{project_version}}"
edition = "2024"
publish = false

# Faster dev builds - optimize dependencies but not the main crate
[profile.dev]
opt-level = 0
debug = true

[profile.dev.package."*"]
opt-level = 2
debug = false

# Faster test builds
[profile.test]
opt-level = 0
debug = true

[profile.test.package."*"]
opt-level = 2
debug = false

[profile.release]
codegen-units = 1
lto = true
strip = true
debug = false
panic = "abort"

[dependencies]
dotenvy = "0.15"
axum = { version = "0.8", default-features = false, features = ["http1", "tokio", "json"] }
{% if authentication=='oidc'-%}
axum-oidc = { version = "0.6", default-features = false }
{% elif authentication=='jwt'-%}
axum-gate = { version = "1.1", features = ["storage-seaorm-v2"] }
tracing = "0.1"
rand = "0.9"
{% endif -%}
{% if authentication=='jwt' or protocol=='grpc' -%}
uuid = { version = "1.16", features = ["v4"] }
chrono = { version = "0.4", features = ["serde"] }
{% endif -%}
anyhow = "1.0"
env_logger = { version = "0.11", default-features = false, features = ["auto-color", "humantime"] }
log = { version = "0.4", default-features = false }
serde = { version = "1.0", default-features = false, features = ["derive"] }
serde_json = { version = "1.0", default-features = false, features = ["std"] }
{% if frontend != 'none' -%}
static-serve = "0.4"
{% endif -%}
{% if database=='postgres' -%}
sea-orm = { version = "2.0.0-rc.20", features = ["sqlx-postgres","runtime-tokio-rustls","macros","with-chrono","with-json","with-uuid","schema-sync","entity-registry","rbac"] }
{% if use_seaorm_migrations -%}
sea-orm-migration = { version = "2.0.0-rc.20", features = ["runtime-tokio-rustls", "sqlx-postgres"] }
migration = { path = "migration" }
{% endif -%}
{% endif -%}
utoipa = { version = "5.4", features = ["axum_extras", "uuid", "chrono"] }
utoipa-axum = "0.2"
utoipa-scalar = { version = "0.3", features = ["axum"] }
{% if 'grpc'==protocol -%}
prost = "0.13"
tonic = "0.13"
prost-types = "0.13"
{% endif -%}
tokio = { version = "1.48", default-features = false, features = ["rt-multi-thread", "macros", "net", "signal"] }
{% if 'grpc'==protocol -%}
[build-dependencies]
tonic-build = "0.13"
{% endif -%}
{% if authentication=='oidc'-%}
tower = { version = "0.5", default-features = false }
tower-sessions = { version = "0.14", default-features = false, features = ["memory-store"] }
{% endif %}

[dev-dependencies]
testcontainers = "0.26"
testcontainers-modules = { version = "0.14.0", features = ["postgres"] }
{% if protocol == 'rest' -%}
reqwest = { version = "0.12", features = ["json", "cookies"] }
{% endif -%}
tokio-test = "0.4"
serial_test = "3.2"
