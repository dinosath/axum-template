FROM lukemathwalker/cargo-chef:latest-rust-1-alpine3.21 AS chef
WORKDIR /app
RUN apk add --no-cache upx

FROM chef AS planner
COPY . .
RUN cargo chef prepare --recipe-path recipe.json

FROM chef AS builder
COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json
COPY . .

RUN cargo build --release
RUN upx --best --lzma /app/target/release/{{project_name}}

{# If static_includes provided, build each in its own stage; else fall back to legacy serve_static_content #}
{% if static_includes is defined and static_includes|length > 0 -%}
{% for inc in static_includes -%}
# Build stage for static route {{ inc.route }} ({{ inc.assets_dir }})
FROM node:20-slim AS static_{{ loop.index }}
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
WORKDIR /app
COPY . .
{% set parent_dir = inc.assets_dir.split('/')[:-1]|join('/') %}
WORKDIR /app/{% if parent_dir %}{{ parent_dir }}{% endif %}
ENV CI=true
RUN pnpm install
RUN pnpm build
{% endfor -%}
{% elif serve_static_content -%}
FROM node:20-slim AS node
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
COPY ./frontend /app
ENV CI=true
WORKDIR /app
RUN pnpm install
RUN pnpm build
{% endif %}

FROM gcr.io/distroless/static-debian12
COPY --from=builder /app/target/release/{{project_name}} /
{% if static_includes is defined and static_includes|length > 0 -%}
# Copy each static bundle into /app/static/<route>
{% for inc in static_includes -%}
{% set route_dir = inc.route.lstrip('/') %}
COPY --from=static_{{ loop.index }} /app/{{ inc.assets_dir }} /app/static/{{ route_dir }}
{% endfor -%}
{% elif serve_static_content -%}
COPY --from=node /app/dist /app/static
{% endif %}

EXPOSE 8080
ENTRYPOINT ["/{{project_name}}"]

