[package]
name = "e2e"
version = "0.1.0"
edition = "2021"

[dependencies]
tokio = { version = "1", features = ["full"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
reqwest = { version = "0.12", features = ["json"] }
testcontainers = { version = "0.26" }
testcontainers-modules = { version = "0.14.0", features = ["postgres"] }
futures = "0.3"
rstest = "0.23"
env_logger = "0.11"
log = "0.4"
{% if frontend != 'none' %}
playwright-rs = "0.8"
{% endif %}

[dev-dependencies]
tokio-test = "0.4"